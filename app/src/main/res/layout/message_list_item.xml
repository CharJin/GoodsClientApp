<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_list_item_message_shop_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <!--<ImageView-->
    <!--android:id="@+id/iv_list_item_message_shop_img"-->
    <!--android:layout_width="40dp"-->
    <!--android:layout_height="40dp"-->
    <!--android:layout_marginStart="10dp"-->
    <!--android:layout_marginEnd="10dp"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@drawable/background" />-->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:id="@+id/ll_list_item_message_shop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="1dp">

            <TextView
                android:id="@+id/tv_list_item_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名"
                android:textColor="@color/message_title_color"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/message_list_item_img_shop" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_list_item_message_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_list_item_message_shop_title"
            android:layout_alignStart="@id/ll_list_item_message_shop_title"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:text="[自动回复]"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_list_item_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="2019/1/12"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>