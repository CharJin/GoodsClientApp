<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home_toolbar_search_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/code_icon" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/home_toolbar_search">

        <ImageView
            android:id="@+id/home_toolbar_search_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_search_grey_600_24dp" />

        <TextView
            android:id="@+id/home_toolbar_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/home_toolbar_search_icon"
            android:text="最好的推荐"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_toolbar_search_scan" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/home_toolbar_search_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/background" />

</LinearLayout>