<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/iv_order_submit_goods"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="14dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/tv_order_submit_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLines="2"
        android:text="商品描述"
        android:textColor="@color/app_base_black_color"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_order_submit_goods"
        app:layout_constraintTop_toTopOf="@id/iv_order_submit_goods" />

    <TextView
        android:id="@+id/tv_order_submit_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/preorder_list_item_goods_plan"
        app:layout_constraintStart_toStartOf="@id/tv_order_submit_goods_name"
        app:layout_constraintTop_toBottomOf="@id/tv_order_submit_goods_name" />


    <TextView
        android:id="@+id/tv_order_submit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="299.00"
        android:textColor="@color/app_base_black_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_submit_goods_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_order_submit_price_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="￥"
        android:textColor="@color/app_base_black_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_submit_price"
        app:layout_constraintEnd_toStartOf="@id/tv_order_submit_price" />

    <TextView
        android:id="@+id/tv_order_submit_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/preorder_list_item_goods_num"
        app:layout_constraintEnd_toEndOf="@id/tv_order_submit_price"
        app:layout_constraintTop_toBottomOf="@id/tv_order_submit_price" />

</android.support.constraint.ConstraintLayout>