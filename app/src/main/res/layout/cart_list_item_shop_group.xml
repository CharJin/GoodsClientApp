<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cart_shop_color"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_cart_goods_choose_all"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cart_choose_selector"
            android:button="@android:color/transparent" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_cart_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_navigate_next_grey_900_24dp"
            android:text="中文"
            android:textColor="@color/cart_shop_text_color"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>